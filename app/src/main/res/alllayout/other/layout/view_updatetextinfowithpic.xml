<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">
    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_updatetextinfowithpic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dip"
        fresco:roundAsCircle="false"
        fresco:roundedCornerRadius="5dp"
        fresco:roundingBorderWidth="0.5dp"
        fresco:roundingBorderColor="#999999"
        fresco:placeholderImage="@drawable/shape_rounded_solid_stroke_lightgray"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:retryImage="@drawable/shape_rounded_solid_stroke_lightgray"
        fresco:retryImageScaleType="focusCrop"
        fresco:failureImage="@drawable/shape_rounded_solid_stroke_lightgray"
        fresco:failureImageScaleType="focusCrop"/>
    <TextView
        android:id="@+id/tv_updatetextinfowithpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="添加图片"
        android:textColor="#999999"
        android:textSize="12sp"/>
    <ImageView
        android:id="@+id/iv_updatetextinfowithpic_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_deleteimage"/>
</RelativeLayout>