<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <include layout="@layout/view_nav"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="145dip"
                android:background="@color/colorPrimary" >
                <RelativeLayout
                    android:id="@+id/layout_employeeinfo2_avatar"
                    android:layout_marginTop="20dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_employeeinfo2_avatar"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_centerHorizontal="true"
                        fresco:roundedCornerRadius="10dp"
                        fresco:roundingBorderWidth="1dp"
                        fresco:roundingBorderColor="#10cc84"
                        fresco:placeholderImage="@mipmap/ic_avatar_large"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:retryImage="@mipmap/ic_avatar_large"
                        fresco:retryImageScaleType="focusCrop"
                        fresco:failureImage="@mipmap/ic_avatar_large"
                        fresco:failureImageScaleType="focusCrop"/>
                    <ImageView
                        android:id="@+id/tv_employeeinfo2_auth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dip"
                        android:visibility="invisible"
                        android:src="@mipmap/ic_employeeinfo2_auth"/>
                    <ImageView
                        android:id="@+id/tv_employeeinfo2_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dip"
                        android:src="@mipmap/ic_employeeinfo2_call"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="13dip"
                    android:layout_below="@id/layout_employeeinfo2_avatar"
                    android:layout_centerHorizontal="true"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_employeeinfo2_nickname"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:layout_marginEnd="8dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_employeeinfo2_userId"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:layout_marginStart="8dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="16dip" >

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dip"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:text="姓名"/>
                    <TextView
                        android:id="@+id/tv_employeeinfo2_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dip"
                        android:textSize="14sp"
                        android:textColor="#999999" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginStart="12dip"
                    android:background="#999999">

                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dip"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:text="性别"/>
                    <TextView
                        android:id="@+id/tv_employeeinfo2_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dip"
                        android:textSize="14sp"
                        android:textColor="#999999" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginStart="12dip"
                    android:background="#999999">

                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dip"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:text="生日"/>
                    <TextView
                        android:id="@+id/tv_employeeinfo2_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dip"
                        android:textSize="14sp"
                        android:textColor="#999999" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginStart="12dip"
                    android:background="#999999">

                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dip"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:text="简介"/>
                    <TextView
                        android:id="@+id/tv_employeeinfo2_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dip"
                        android:textSize="14sp"
                        android:textColor="#999999" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="16dip" >

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dip"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:text="星级评价"/>
                    <TextView
                        android:id="@+id/tv_employeeinfo2_evaluate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dip"
                        android:textSize="14sp"
                        android:textColor="#999999" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginStart="12dip"
                    android:background="#999999">

                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dip"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:text="完成率"/>
                    <TextView
                        android:id="@+id/tv_employeeinfo2_completionrate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dip"
                        android:textSize="14sp"
                        android:textColor="#999999" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_employeeinfo2_evaluate"
                android:text="评价TA"
                android:background="@drawable/shape_rounded_solid_green"
                android:textColor="@android:color/white"
                android:layout_marginEnd="16dip"
                android:layout_marginStart="16dip"
                android:layout_marginBottom="16dip"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="60dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>