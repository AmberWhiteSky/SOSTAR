<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:paddingLeft="12dip"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:gravity="center_vertical"
            android:background="@drawable/shape_rounded_solid_darkgreen">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dip"
                android:layout_marginEnd="7dip"
                android:src="@mipmap/ic_main_search"/>
            <EditText
                android:id="@+id/ed_search_word"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#90e6c5"
                android:textColorHint="#90e6c5"
                android:hint="搜索关键词"
                android:singleLine="true"
                android:textSize="14sp"
                android:imeOptions="actionSearch"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_search_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="取消"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_search_hot"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="16dip"
            android:layout_marginStart="12dip"
            android:layout_marginBottom="8dip"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="热门搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.renyu.commonlibrary.views.FlowLayout
            android:id="@+id/flow_search_hot"
            android:layout_marginStart="12dip"
            android:layout_marginEnd="12dip"
            android:layout_marginBottom="8dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.renyu.commonlibrary.views.FlowLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_search"
        android:layout_marginStart="12dip"
        android:layout_marginEnd="12dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>