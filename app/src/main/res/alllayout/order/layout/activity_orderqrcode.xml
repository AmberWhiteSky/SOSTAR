<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">
        <include layout="@layout/view_nav"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="60dip"
            android:orientation="vertical"
            android:background="@drawable/shape_rounded_solid_white">
            <TextView
                android:id="@+id/tv_orderqrcode_orderid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="订单编号"
                android:layout_marginTop="25dip"
                android:layout_marginBottom="25dip"
                android:layout_gravity="center_horizontal"
                android:textColor="#333333"/>
            <ImageView
                android:id="@+id/iv_orderqrcode"
                android:layout_width="210dip"
                android:layout_height="210dip"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_orderqrcode_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="工作时间"
                android:layout_marginTop="12dip"
                android:layout_marginBottom="20dip"
                android:layout_gravity="center_horizontal"
                android:textColor="#333333"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_orderqrcode_tip"
        android:text="提示：距离开工还有 0 分钟\n请尽快提醒你的雇员扫码签到开工"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>