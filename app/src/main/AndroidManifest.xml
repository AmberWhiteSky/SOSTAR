<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.renyu.sostar">

    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name=".application.SostarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" android:screenOrientation="portrait"></activity>
        <!-- 定位上报服务 -->
        <service android:name=".service.LocationService" android:process=":locationservice"></service>
        <!-- 支付宝支付相关 -->
        <activity android:name=".alipay.AliPayActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".alipay.AliH5PayActivity" android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <!-- 微信支付 -->
        <activity android:name=".wxapi.WXPayEntryActivity"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"></activity>
        <activity android:name=".wxapi.WXPayActivity"
            android:theme="@android:style/Theme.Translucent"
            android:screenOrientation="portrait"></activity>
        <receiver
            android:name=".wxapi.AppRegister">
            <intent-filter>
                <action android:name="com.tencent.mm.plugin.openapi.Intent.ACTION_REFRESH_WXAPP" />
            </intent-filter>
        </receiver>
        <!-- 通知栏 -->
        <activity android:name=".activity.other.NotificationActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateAlwaysHidden"></activity>
    </application>
</manifest>